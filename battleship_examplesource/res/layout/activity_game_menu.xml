<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMenu" >
        
	    <Button 
	        android:id="@+id/single_player_game"
	        android:clickable="true"
	        android:text="@string/single_player_game"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_centerInParent="true" />
	    
	    <Button 
	        android:id="@+id/multi_player_game"
	        android:clickable="true"
	        android:text="@string/multi_player_game"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/single_player_game" />
	
</RelativeLayout>